{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./lib"
  },
  "rules": {
    "semi": [ 2, "always" ],
    "indent": [ "error", 4 ]
  },
  "exclude": [ "node_modules" ],
  "include": [ "**/*.ts" ]
}
